generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id                  String    @default(uuid())
  username            String    @unique
  email               String    @id
  password            String
  otp                 String
  otpExpiry           DateTime
  isAcceptingMessages Boolean   @default(true)
  isVerified          Boolean   @default(false)
  messages            Message[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAT DateTime @default(now())
  user      User     @relation(fields: [content], references: [email])
}
